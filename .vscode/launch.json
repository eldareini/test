  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote",
      "address": "localhost",
      "protocol": "legacy",
      "port": 8888,
      "localRoot": "${workspaceRoot}",
      "remoteRoot": "/opt/app-root/src/"
    },
    {
      "type": "node",
      "request": "launch",
      "protocol": "legacy",
      "name": "Launch Program",
      "program": "${workspaceRoot}/app.js"
    }
  ]
}